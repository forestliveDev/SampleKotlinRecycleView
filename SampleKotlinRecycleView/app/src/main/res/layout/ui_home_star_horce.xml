<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    card_view:cardElevation="2dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/im_horse"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:scaleType="fitXY"
            android:src="@drawable/race_image" />

        <TextView
            android:textSize="10dp"
            android:textColor="@color/cardview_light_background"
            android:gravity="center_vertical|center"
            android:text="凱旋門賞"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:id="@+id/tv_image_name"
            android:background="#dd000000"
            android:layout_alignBottom="@+id/im_horse" />

        <TextView
            android:text="Title"
            android:textSize="28dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/im_horse"
            android:layout_toEndOf="@+id/im_horse"
            android:layout_alignBottom="@+id/im_horse"
            android:layout_alignParentEnd="true"
            android:lines="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_country"
                android:gravity="right|bottom"
                android:text="®️ Yahoo Japan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/im_horse"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_alignStart="@+id/tv_title"
                android:layout_alignTop="@+id/tv_image_name" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

